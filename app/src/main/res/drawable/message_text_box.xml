<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="1dp"
        android:top="1dp"
        android:left="1dp"
        android:right="1dp"
        android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_input_fill_color"/>
            <stroke
                android:width="1dp"
                android:color="@color/dark_input_border_color" />
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:top="1dp"
        android:left="1dp"
        android:right="1dp"
        android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_input_fill_color"/>
            <stroke
                android:width="1dp"
                android:color="@color/dark_highlight_color" />
            <corners android:radius="5dp"/>
        </shape>
    </item>
</selector>