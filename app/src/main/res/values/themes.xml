<resources>
    <!-- Base application theme. -->
    <style name="Theme.Mff" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/dark_highlight_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/dark_background_color</item>
        <item name="android:navigationBarColor">@color/dark_background_color</item>
        <item name="android:autofilledHighlight">@android:color/transparent</item>
    </style>

    <style name="Theme.Mff.NavbarButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:backgroundTint">@color/dark_nav_untoggled</item>
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerRadius">0dp</item>
    </style>
</resources>